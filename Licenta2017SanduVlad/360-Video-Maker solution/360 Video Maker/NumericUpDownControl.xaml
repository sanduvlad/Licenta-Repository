<UserControl x:Class="_360_Video_Maker.NumericUpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_360_Video_Maker"
             mc:Ignorable="d" Height="20" Width="160">
    <Grid Margin="0">
        <Button x:Name="button" Content="^" HorizontalAlignment="Left" VerticalAlignment="Top" Width="18" Click="IncrementUp_Event" Margin="114,0,0,0" Background="#FF2A2A2A" Foreground="#FFD1D1D1"/>
        <Button x:Name="button1" Content="˅" HorizontalAlignment="Left" VerticalAlignment="Top" Width="18" Click="IncrementDown_Event" Background="#FF2A2A2A" Foreground="#FFD1D1D1"/>
        <TextBox x:Name="IncrementTextControl" HorizontalAlignment="Left" Height="20" Margin="18,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Background="#FF161616" Foreground="#FFF9F9F9" TextChanged="IncrementTextControl_TextChanged"/>
        <Image x:Name="ErrorImage" Visibility="Hidden" ToolTip="Invalid value" HorizontalAlignment="Left" Height="20" Margin="132,0,0,0" VerticalAlignment="Top" Width="28" Source="Resources/errorImage.png" Cursor="Hand" Stretch="Fill"/>


    </Grid>
</UserControl>
